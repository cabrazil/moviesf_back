{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "api/**/*",
    "src/controllers/**/*",
    "src/routes/**/*",
    "src/utils/**/*",
    "src/prisma.ts",
    "src/server.ts"
  ],
  "exclude": ["node_modules", "dist", "src/scripts/**/*", "src/services/**/*", "src/tests/**/*"]
} 