{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "api/**/*",
    "src/controllers/**/*",
    "src/routes/**/*",
    "src/services/**/*",
    "src/repositories/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/prisma.ts",
    "src/scripts/updateStreamingData.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/scripts",
    "src/tests",
    "src/scripts/**/*",
    "src/tests/**/*",
    "src/services/emotionalRecommendationService.ts"
  ]
}