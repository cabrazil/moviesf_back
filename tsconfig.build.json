{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "api/**/*",
    "src/controllers/**/*",
    "src/routes/**/*",
    "src/utils/**/*",
    "src/prisma.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/scripts",
    "src/services",
    "src/tests",
    "src/scripts/**/*",
    "src/services/**/*", 
    "src/tests/**/*"
  ]
} 