{
  "name": "moviesf-back",
  "version": "1.0.0",
  "description": "Backend para aplicação de busca de filmes por sentimento",
  "main": "api/index.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only api/index.ts",
    "build": "prisma generate && tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "env:dev": "node scripts/setup-and-run.js development dev",
    "env:prod": "node scripts/setup-and-run.js production dev",
    "env:setup:dev": "./scripts/setup-env.sh development",
    "env:setup:prod": "./scripts/setup-env.sh production",
    "script:dev": "node scripts/run-script-wrapper.js development",
    "script:prod": "node scripts/run-script-wrapper.js production",
    "script": "./scripts/run-script.sh",
    "env:activate": "node scripts/activate-env.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:youtube": "jest src/tests/youtube-search.service.test.ts",
    "test:youtube-manual": "jest src/tests/youtube-api-manual.test.ts",
    "test:youtube-script": "ts-node src/scripts/test-youtube-api.ts",
    "db:backup": "ts-node prisma/scripts/backup-database.ts",
    "db:restore": "ts-node prisma/scripts/restore-database.ts",
    "db:reset": "ts-node src/scripts/resetDatabase.ts",
    "db:reset-data": "ts-node src/scripts/resetData.ts",
    "db:reset-with-schema": "ts-node src/scripts/resetWithSchema.ts",
    "db:backup-supabase": "ts-node src/scripts/backupSupabase.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/archiver": "^6.0.3",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.5",
    "@types/node-cache": "^4.1.3",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsdom": "^26.1.0",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.32",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
